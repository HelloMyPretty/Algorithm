import java.util.Arrays;

public class FloydWarshell {
	static int maxn;
	int dis[][]=new int[maxn][maxn];		//权值矩阵,初始化为INF,令gra[i][i]=0
	int path[][]=new int[maxn][maxn];
	int n;									//n个结点
	
	//初始化权值矩阵，假设结点从0到n-1编号
	void init() {
		Arrays.fill(dis, Integer.MAX_VALUE);
		for(int i=0;i<n;i++)
			dis[i][i]=0;
	}
	void floyd() {
		
		//路径预处理，记录每个节点的父节点
		for(int i=0;i<n;i++) {
			for(int j=0;j<n;j++) {
				if(d[i][j]<Integer.MAX_VALUE)
					path[i][j]=i;
				else path[i][j]=-1;
			}
		}
	}
	
}
