package B;

import java.io.BufferedInputStream;
import java.util.Scanner;

public class Main {
	static class tuple{
		int x,y;
		@Override
		public boolean equals(Object obj) {
			return x==((tuple)obj).x&&y==((tuple)obj).y;
		}
		public tuple(int a,int b) {
			x=a;
			y=b;
		}
	}
		public static void main(String[] args) {
			Scanner cin=new Scanner(new BufferedInputStream(System.in));
			
			int n=cin.nextInt();
			int ans=1;
			tuple pre=new tuple(0, 0);
			tuple cur=new tuple(cin.nextInt(),cin.nextInt());
			if(!pre.equals(cur)) ans+=Math.min(cur.x, cur.y);
			pre=cur;
			//System.out.println("first"+ans);
			for(int i=2;i<=n;i++) {
				cur=new tuple(cin.nextInt(), cin.nextInt());
				if(pre.equals(cur)) continue;
				int max=Math.max(pre.x, pre.y);
				int min=Math.min(cur.x, cur.y);
			//	System.out.println("max:"+max+"  min:"+min);
				pre=cur;
				ans+=(min-max+1);
			}
			System.out.printf("%d",ans);
		}
	
}
